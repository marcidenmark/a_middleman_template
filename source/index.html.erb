<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js"></script>

<script type="text/javascript">
var myLatlng = new google.maps.LatLng(19.0759837,72.8776559);
  // var myLatlng2 = new google.maps.LatLng(23.473324,79.277344);


var myOptions = {
  zoom: 6,
  center: myLatlng,
  scrollwheel: false,
  mapTypeId: google.maps.MapTypeId.ROADMAP,
